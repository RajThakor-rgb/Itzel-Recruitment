<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (window.heroSliderInitialized) return;
        window.heroSliderInitialized = true;

        const container = document.querySelector('.hero-wrapper');
        if (!container) return;

        const slides = Array.from(container.querySelectorAll('.hero-slide'));
        const indicators = Array.from(container.querySelectorAll('.indicator'));
        if (slides.length < 2) return;

        let currentSlide = 0;
        let autoAdvanceInterval;

        function showSlide(index) {
            slides.forEach((slide, i) => slide.classList.toggle('active', i === index));
            indicators.forEach((indicator, i) => indicator.classList.toggle('active', i === index));
            currentSlide = index;
        }

        function nextSlide() { showSlide((currentSlide + 1) % slides.length); }
        function startAuto() { stopAuto(); autoAdvanceInterval = setInterval(nextSlide, 5000); }
        function stopAuto() { clearInterval(autoAdvanceInterval); }

        indicators.forEach(ind => ind.addEventListener('click', () => {
            showSlide(parseInt(ind.dataset.slideTo, 10));
            startAuto();
        }));
        
        container.addEventListener('mouseenter', stopAuto);
        container.addEventListener('mouseleave', startAuto);

        showSlide(0);
        startAuto();
    });
</script>

